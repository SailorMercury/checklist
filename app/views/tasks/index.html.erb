<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Task's Name</th>
    <th>Hash Card</th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <% if hashcard.user_id == current_user.id %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.hashcard.name %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
<% end %>
</table>
